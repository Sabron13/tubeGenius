<%= form_for(@video) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, id: "edit_title", class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, id: "edit_description", class: 'form-control' %>

  <%= f.label :category %>
  <%= f.text_field :category, id: "edit_category", class: 'form-control' %>

  <%= f.label :url %>
  <%= f.text_field :url, id: "edit_category", class: 'form-control' %>

  <%= f.submit "Save Changes" %>
<% end %>