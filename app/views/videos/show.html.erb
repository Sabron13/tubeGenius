<h2><%= @video.title %></h2>
<%= link_to "Delete Video", { action: :destroy, id: @video.id }, method: :delete %>
<%= link_to "Edit Video", edit_video_path(@video) %>

<p><%= @video.description %></p>
<p><%= @video.category %></p>
<p><%= @video.availability %></p>

<div class="row">
  <div class="medium-9 columns" id="video"></div>
  <div class="medium-3 columns" id="comments_container"><ul id="com"></ul></div>
</div>
<button id="comment_button" data-reveal-id="myModal">Add a comment!</button>
<div id="myModal" class="reveal-modal tiny" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog"><%= render "comments/form" %></div>


<div id="static_comments_container"> <%= render :template => 'comments/index', locals: {comments: @comments} %></div>
