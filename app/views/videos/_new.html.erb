<%= form_for Video.new, url: videos_path, html: { class: "form-video" } do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.text_field :category %>
  </div>

  <div class="field">
    <%= f.radio_button :availability, 'Public', :checked => true %>
    <%= label :availability, 'Public' %>
    <%= f.radio_button :availability, 'Personal' %>
    <%= label :availability, 'Personal' %>
    <%= f.radio_button :availability, 'Group' %>
    <%= label :availability, 'Group' %>
  </div>

  <div class="action">
    <ul class="button-group">
      <li>
        <button class="small button" name="commit" id="createNewVideo" type="submit">Create Video</button>
      </li>
    </ul>
  </div>
<% end %>